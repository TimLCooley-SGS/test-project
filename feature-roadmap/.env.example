# Database Configuration
DATABASE_URL=postgresql://username:password@your-rds-endpoint.amazonaws.com:5432/database_name

# Individual connection params (alternative to DATABASE_URL)
DB_HOST=your-rds-endpoint.amazonaws.com
DB_PORT=5432
DB_NAME=feature_roadmap
DB_USER=your_username
DB_PASSWORD=your_password

# JWT Secret for authentication (generate a random 32+ character string)
# You can generate one with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-to-something-random

# Session settings
SESSION_EXPIRY_HOURS=24

# Server port
PORT=5000

# Environment
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Optional: External integrations
JIRA_API_URL=https://your-domain.atlassian.net
LINEAR_API_URL=https://api.linear.app
